---
layout: "base.njk"
pagination:
    data: profiles
    size: 1
    alias: profile
    resolve: values
permalink: "/profiles/{{ profile.name | slug }}/"
---
<h2>Dream</h2>
{{profile.name}}
<strong>{{ dream }}</strong>

<h2>Gig tags</h2>
{%for tag, totalDays in gigTags -%}
<p>{{tag}}: {{totalDays}} days</p>
{% endfor -%}
<h2>Gigs</h2>
<ol>
    {% for g in gigs -%}
    <li class="gig">
        <h3>{{g.title}}</h3>
        <p>{{g.start}} <em>({{g.duration}})</em></p>
        
        <h4>Tags</h4>
        <ul>
        {% for t in g.tags -%}
        <li><p>{{t}}</p></li>
        {% endfor -%}
        </ul>

        <h4>Highligts</h4>
        <ul>
        {% for h in g.highlights -%}
        <li><p>{{h}}</p></li>
        {% endfor -%}
        </ul>
    
    </li>
    {% endfor -%}
</ol>


<h2>Teams</h2>
<ul>
    {% for t in collections.team -%}
    {% if teamIds.includes(t.data.id) %} <li><p><a href="{{ t.url }}" >{{ t.data.name }}</a></p></li> {% endif %}
    {% endfor -%}
</ul>
